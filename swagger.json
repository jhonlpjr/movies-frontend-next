{
  "openapi": "3.0.4",
  "info": {
    "title": "MovieApi",
    "version": "1.0"
  },
  "paths": {
    "/api/v1/movies": {
      "get": {
        "tags": [
          "Movies"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieResponseIEnumerableApiResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Movies"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMovieRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieResponseApiResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/movies/{id}": {
      "get": {
        "tags": [
          "Movies"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieResponseApiResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": [
          "Movies"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateMovieRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieResponseApiResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Movies"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/movies/search": {
      "get": {
        "tags": [
          "Movies"
        ],
        "parameters": [
          {
            "name": "Query",
            "in": "query",
            "schema": {
              "maxLength": 100,
              "minLength": 0,
              "type": "string"
            }
          },
          {
            "name": "Genre",
            "in": "query",
            "schema": {
              "enum": [
                "Action",
                "Comedy",
                "Drama",
                "Horror",
                "Romance",
                "SciFi",
                "Thriller",
                "Animation",
                "Documentary",
                "Adventure"
              ],
              "type": "string"
            }
          },
          {
            "name": "Limit",
            "in": "query",
            "schema": {
              "maximum": 200,
              "minimum": 1,
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "YearFrom",
            "in": "query",
            "schema": {
              "maximum": 2100,
              "minimum": 1900,
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "YearTo",
            "in": "query",
            "schema": {
              "maximum": 2100,
              "minimum": 1900,
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "Popularity",
            "in": "query",
            "schema": {
              "maximum": 2147483647,
              "minimum": 0,
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "Rating",
            "in": "query",
            "schema": {
              "maximum": 10,
              "minimum": 0,
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "OrderBy",
            "in": "query",
            "schema": {
              "enum": [
                "Title",
                "Year",
                "Popularity",
                "Rating"
              ],
              "type": "string"
            }
          },
          {
            "name": "OrderDirection",
            "in": "query",
            "schema": {
              "pattern": "^(asc|desc)$",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieResponseIEnumerableApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/movies/popular": {
      "get": {
        "tags": [
          "Movies"
        ],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieResponseIEnumerableApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/movies/recommendations": {
      "get": {
        "tags": [
          "Movies"
        ],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieResponseIEnumerableApiResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateMovieRequest": {
        "required": [
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          },
          "genre": {
            "minItems": 1,
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "year": {
            "maximum": 2100,
            "minimum": 1900,
            "type": "integer",
            "format": "int32"
          },
          "rating": {
            "maximum": 10,
            "minimum": 0,
            "type": "number",
            "format": "double"
          },
          "popularity": {
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "MetaResponse": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "MovieResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "genre": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "rating": {
            "type": "number",
            "format": "double"
          },
          "year": {
            "type": "integer",
            "format": "int32"
          },
          "popularity": {
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "MovieResponseApiResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/MovieResponse"
          },
          "meta": {
            "$ref": "#/components/schemas/MetaResponse"
          }
        },
        "additionalProperties": false
      },
      "MovieResponseIEnumerableApiResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MovieResponse"
            },
            "nullable": true
          },
          "meta": {
            "$ref": "#/components/schemas/MetaResponse"
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "UpdateMovieRequest": {
        "type": "object",
        "properties": {
          "title": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "genre": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "year": {
            "maximum": 2100,
            "minimum": 1900,
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "rating": {
            "maximum": 10,
            "minimum": 0,
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "popularity": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}